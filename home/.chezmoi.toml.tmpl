{{- $email := "example@email.com" -}}
{{- if env "dev" -}}
{{-   $email = promptStringOnce . "email" "Email address" -}}
{{- end -}}
{{- $osid := .chezmoi.os -}}

{{- if hasKey .chezmoi.osRelease "idLike" -}}
{{-   $osid = printf "%s-%s" .chezmoi.os .chezmoi.osRelease.idLike -}}
{{- end -}}

[data]
    email = {{ $email | quote }}
    osid = {{ $osid | quote }}
    dev = {{ env "dev" | default true }}
