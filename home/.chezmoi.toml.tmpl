{{- $email := "example@email.com" -}}
{{- $dev := (env "dev") | default "true" | eq "true" -}}
{{- if or $dev (promptBoolOnce "email" "Configure email?" true) -}}
  {{- $email = promptStringOnce "email" "Enter your email:" -}}
{{- end -}}

[data]
  email = {{ $email | quote }}
  dev = {{ $dev | quote }}

# Package configuration
[data.packages]
    # Common packages for all systems
    common = ["git", "fish", "tmux", "curl", "ripgrep"]

[data.packages.darwin]
brews = ["starship", "eza", "gh", "bat"]
taps = ["homebrew/cask-fonts"]
casks = ["visual-studio-code", "font-fira-code", "font-fira-code-nerd-font"]

[data.packages.debian]
apt = ["build-essential", "bat", "cmake", "htop", "fonts-noto-color-emoji", 
       "powerline", "fonts-powerline", "tree", "fonts-firacode", 
       "vim", "xclip"]

# Task configuration
[data.tasks]
    # Enable or disable specific setup tasks
    tmux = true
    asdf = true
    docker = true
    ssh = true
    vscode = true
    starship = true
    onepassword = false
    gitcli = true
